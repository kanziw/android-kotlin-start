<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/BOTTOM_TAB_HEIGHT">

    <Button
        android:id="@+id/bottom_tab_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/BOTTOM_TAB_HEIGHT"
        android:text="@string/BOTTOM_TAB_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bottom_tab_2" />

    <Button
        android:id="@+id/bottom_tab_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/BOTTOM_TAB_HEIGHT"
        android:text="@string/BOTTOM_TAB_2"
        app:layout_constraintLeft_toRightOf="@+id/bottom_tab_1"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
